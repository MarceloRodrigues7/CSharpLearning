<Window x:Class="Gestor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="Menu">
                <MenuItem Header="Conta" Click="MenuConta_Click"/>
                <MenuItem Header="Categoria" Click="MenuCategoria_Click"/>
                <MenuItem Header="Tipo" Click="MenuTipo_Click"/>
                <MenuItem Header="Status" Click="MenuStatus_Click"/>
                <MenuItem Header="Transação" Click="MenuTransacao_Click"/>
            </MenuItem>
        </Menu>
        <TabControl x:Name="JanelaPrincipal" Margin="20,20,20,20"/>
    </Grid>
</Window>
